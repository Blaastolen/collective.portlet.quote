<dl class="portlet portletRandomQuote"
    i18n:domain="collective.portlet.quote">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <tal:block replace="view/data/title"/>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd" tal:content="structure view/get_quote">
        Body text
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <tal:block condition="not:view/has_link" replace="view/get_source"/>
        <tal:block condition="view/has_link">
            <a tal:content="view/get_source" 
               tal:attributes="href view/get_link"/>
        </tal:block>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
